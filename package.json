{
  "name": "react-lego",
  "version": "2.0.0",
  "description": "",
  "main": "src/server-entry.js",
  "scripts": {
    "postinstall": "npm run build",
    "build": "rm -rf compiled && npm run compile:server && npm run compile && node scripts/copyAssets.js",
    "compile": "webpack --config src/config/webpack.config.prod.js -p",
    "compile:prod": "npm run compile",
    "compile:dev": "ENV=dev webpack --config src/config/webpack.config.dev.js",
    "compile:server": "babel src -d compiled",
    "start": "node compiled/server-entry.js",
    "start:prod": "npm run start",
    "start:dev": "ENV=dev nodemon src/server-entry.js",
    "sassLint": "sass-lint -v -q -c ./sass-lint.yml ",
    "lint": "eslint 'src/**/*.js'",
    "test": "npm run mocha -- 'src/**/*.spec.js'",
    "test:e2e": "npm run test:e2e-local",
    "test:e2e-local": "npm run nightwatch -- --env local --tag staging",
    "test:e2e-production": "npm run nightwatch -- --env chrome_win --tag production",
    "test:e2e-staging": "npm run nightwatch -- --env safari_osx,chrome_osx,firefox_win,firefox_osx,IE11,edge --tag staging",
    "prenightwatch": "selenium-standalone install --version=3.0.1",
    "nightwatch": "nightwatch -o ./tests/e2e/tests_output -c ./tests/config/nightwatch.conf.js",
    "mocha": "mocha --opts ./tests/config/mocha.opts "
  },
  "engines": {
    "node": "^7.6.0",
    "npm": "^4.1.0"
  },
  "pre-commit": [
  ],
  "pre-push": [
    "build",
    "test:e2e"
  ],
  "author": "Peter Mouland",
  "license": "ISC",
  "dependencies": {
    "assets-webpack-plugin": "^3.5.1",
    "axios": "^0.15.3",
    "babel-core": "^6.8.0",
    "babel-loader": "^6.4.0",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-plugin-transform-react-jsx": "^6.23.0",
    "babel-polyfill": "^6.23.0",
    "css-loader": "^0.27.0",
    "cssnano": "^3.10.0",
    "debug": "^2.2.0",
    "es6-promise": "^4.0.5",
    "extract-text-webpack-plugin": "^2.1.0",
    "history": "^4.6.1",
    "http-server": "^0.9.0",
    "koa": "^2.2.0",
    "koa-body": "^1.6.0",
    "koa-compress": "^2.0.0",
    "koa-router": "^7.0.1",
    "koa-static": "^3.0.0",
    "node-hook": "^0.4.0",
    "node-sass": "^4.5.0",
    "postcss-loader": "^1.3.3",
    "preact": "^7.2.0",
    "preact-render-to-string": "^3.6.0",
    "progress-bar-webpack-plugin": "^1.9.3",
    "react-bem-helper": "^1.3.1",
    "sass-loader": "^6.0.2",
    "style-loader": "^0.13.0",
    "webpack": "^2.2.1",
    "webpack-visualizer-plugin": "^0.1.11"
  },
